        xmlns:Routing="clr-namespace:LegoRobot.Model.Routing">
    <Window.Resources>
        <CollectionViewSource x:Key="routeViewSource" d:DesignSource="{d:DesignInstance Routing:Route, CreateList=True}" />
    </Window.Resources>
    <Grid DataContext="{StaticResource routeViewSource}">
        <Button Content="Button" HorizontalAlignment="Left" Margin="147,199,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.5,0.5" Click="Button_Click_2">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="338.723"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Content="Create DB" HorizontalAlignment="Left" Height="70" Margin="271,55,0,0" VerticalAlignment="Top" Width="166" Click="Button_Click_1"/>

    </Grid>
</Window>